	journal = {International Journal of Climatology},
	author = {Colorado-Ruiz, Gabriela and Cavazos, Tereza and Salinas, José Antonio and De Grau, Pamela and Ayala, Rosario},
	month = dec,
	year = {2018},
	note = {Publisher: John Wiley \& Sons, Ltd},
	keywords = {climate change, projections, Mexico, CMIP5, monsoon, MSD, REA, weighted ensembles},
